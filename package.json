{
  "name": "bmi_calculator",
  "version": "1.0.0",
  "description": "Program to calculate BMI",
  "main": "src/index.js",
  "scripts": {
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "mocha $(find src -name '*.test.js')",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:unit:coverage": "nyc npm run test:unit",
    "test:integration": "mocha --file ./test/integration/globalTestSetup.js $(find test/integration -name '*.test.js')",
    "test:docker": "bash test/integration/run.sh",
    "start": "node src/index"
  },
  "author": "Rich <richgled25@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.24.2",
    "mocha": "^9.1.0",
    "nyc": "^15.1.0",
    "sinon": "^11.1.2",
    "sinon-chai": "^3.7.0",
    "supertest": "^6.1.6"
  },
  "dependencies": {
    "awilix": "^5.0.1",
    "express": "^4.17.1",
    "pino": "^7.0.0-rc.3"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "exclude": [
      "**/*.test.js",
      "test",
      "derez",
      "node_modules",
      "coverage",
      "*.*"
    ]
  }
}